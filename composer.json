{
    "name": "semarangdev/bayar-duitku-php",
    "description": "Pustaka PHP untuk gerbang pembayaran Duitku",
    "keywords": [
        "semarangdev",
        "bayar-duitku-php"
    ],
    "homepage": "https://github.com/semarangdev/bayar-duitku-php",
    "license": "MIT",
    "authors": [
        {
            "name": "SemarangDev",
            "email": "people@semarang.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "SemarangDev\\Duitku\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SemarangDev\\Duitku\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
